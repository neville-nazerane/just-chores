<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:JustChores.MobileApp.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="vm:DatePickerPopupModel"
             x:Class="JustChores.MobileApp.Components.DatePickerPopup"
               Size="200, 300">
    <Grid RowDefinitions="30, *, 50, 40"
          ColumnDefinitions="*, *" >
        
        <Label 
            Text="{Binding Message}"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Grid.ColumnSpan="2" />

        <Grid Grid.Row="2"
              Grid.ColumnSpan="2"
              ColumnDefinitions="auto, *" >
            <Label Text="{Binding DateLabel}"
                   FontSize="Small" />
            <DatePicker Date="{Binding Date}"
                        Grid.Column="1" />
        </Grid>

        <Button Text="Ok"
                Grid.Row="3"
                Clicked="OkClicked" />


        <Button Text="Cancel"
                Grid.Row="3"
                Grid.Column="1"
                Clicked="CanceledClicked"/>

    </Grid>
</toolkit:Popup>
