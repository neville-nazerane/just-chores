<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:JustChores.MobileApp.ViewModels"
             xmlns:conv="clr-namespace:JustChores.MobileApp.ValueConverters"
             xmlns:m="clr-namespace:JustChores.MobileApp.Models"
             x:Class="JustChores.MobileApp.Pages.ListChoresPage"
             x:DataType="vm:ListChoresViewModel"
             Title="Chores">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="setting.svg" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>

        <conv:DueDateToBoolConverter x:Key="due" />

    </ContentPage.Resources>

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <CollectionView ItemsSource="{Binding Chores}"
                        Header="Batman" >

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                            VerticalItemSpacing="10"
                            Span="{OnIdiom Phone=1, Tablet=2}" />
            </CollectionView.ItemsLayout>

            <CollectionView.EmptyViewTemplate>
                <DataTemplate>
                    <Label Text="You have no chores for you" />
                </DataTemplate>
            </CollectionView.EmptyViewTemplate>

            <CollectionView.HeaderTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="3*, *"
                          Margin="10, 10, 10, 5" >
                        <Label Text="Your Chores"
                               FontSize="Large"
                               FontAttributes="Bold" />

                        <AbsoluteLayout Grid.Column="1"
                                        HeightRequest="40">


                            <Button Text="      Add"
                                    AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                                    AbsoluteLayout.LayoutFlags="SizeProportional"
                                    Command="{Binding AddCommand}"
                                    BorderColor="{StaticResource ButtonColor}" 
                                    TextColor="{StaticResource ButtonColor}"
                                    BorderWidth="2"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkBackground}}" />

                            <Ellipse Fill="{StaticResource ButtonColor}"
                                     AbsoluteLayout.LayoutBounds="15, .5, 15, 15"
                                     AbsoluteLayout.LayoutFlags="YProportional"
                                     HeightRequest="20"
                                     WidthRequest="20"/>

                            <Label Text="+" 
                                   FontSize="Large"
                                   FontAttributes="Bold"
                                   Margin="0, -3, 0, 0"
                                   VerticalTextAlignment="Center"
                                   HorizontalTextAlignment="Center"
                                   AbsoluteLayout.LayoutBounds="10, .5, 25, 25"
                                   AbsoluteLayout.LayoutFlags="YProportional"
                                   TextColor="{StaticResource White}" />

                        </AbsoluteLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.HeaderTemplate>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:Chore">
                    <Grid BackgroundColor="LightGray"
                        RowDefinitions="auto, 50, 30, 40"
                        Padding="5"
                        Margin="5"
                        ColumnDefinitions="*" >

                        <Label Text="{Binding Title}" 
                            FontAttributes="Bold"
                            FontSize="Large" />

                        <Label Grid.Row="1" >
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="{Binding Frequency}" />
                                        <Span Text=" " />
                                        <Span Text="{Binding FrequencyType}" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Grid Grid.Row="2"
                              ColumnDefinitions="auto, *, 80"
                              ColumnSpacing="2">
                            <Label Text="{Binding DueOn, StringFormat='Due on: {0:dd-MM-yy}'}" />
                            <Label Text="Due" 
                                    IsVisible="{Binding DueOn, Converter={x:StaticResource due}, ConverterParameter= 'due'}"
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="White"
                                    BackgroundColor="OrangeRed"
                                    Grid.Column="2" />
                            <Label Text="Overdue" 
                                    IsVisible="{Binding DueOn, Converter={x:StaticResource due}, ConverterParameter= 'overdue'}"
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="White"
                                    BackgroundColor="Red"
                                    Grid.Column="2" />
                        </Grid>


                        <Grid Grid.Row="3"
                                ColumnDefinitions="*, *, *"
                                RowSpacing="6">
                            <Button Text="Delete"
                                BackgroundColor="IndianRed"
                                Command="{Binding DeleteCommand, 
                                                    Source={x:RelativeSource AncestorType={x:Type vm:ListChoresViewModel}}}"
                                CommandParameter="{Binding Id}"  />

                            <Button Text="Edit"
                                    Grid.Column="1"
                                BackgroundColor="YellowGreen"
                                Command="{Binding EditCommand, 
                                                    Source={x:RelativeSource AncestorType={x:Type vm:ListChoresViewModel}}}"
                                CommandParameter="{Binding Id}"  />

                            <Button Text="Complete"
                                    Grid.Column="2"
                                    BackgroundColor="ForestGreen"
                                    Command="{Binding CompleteCommand, 
                                                        Source={x:RelativeSource AncestorType={x:Type vm:ListChoresViewModel}}}" 
                                    CommandParameter="{Binding Id}" />
                        </Grid>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </RefreshView>

</ContentPage>