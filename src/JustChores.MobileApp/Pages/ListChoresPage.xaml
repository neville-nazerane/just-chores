<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:JustChores.MobileApp.ViewModels"
             xmlns:m="clr-namespace:JustChores.MobileApp.Models"
             x:Class="JustChores.MobileApp.Pages.ListChoresPage"
             x:DataType="vm:ListChoresViewModel"
             Title="ListChoresPage">

    <CollectionView ItemsSource="{Binding Chores}">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical"
                             VerticalItemSpacing="10"
                             Span="2" />
        </CollectionView.ItemsLayout>

        <CollectionView.EmptyViewTemplate>
            <DataTemplate>
                <Label Text="You have no chores for you" />
            </DataTemplate>
        </CollectionView.EmptyViewTemplate>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="m:Chore">
                <HorizontalStackLayout>
                    <Grid BackgroundColor="LightGray"
                          RowDefinitions="auto, 50, 50"
                          Padding="5"
                          Margin="5"
                          ColumnDefinitions="auto, *, 40" >
                        
                        <Label Text="{Binding Title}" 
                               FontAttributes="Bold"
                               FontSize="Large" />

                        <Label Grid.Row="1" >
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="{Binding Frequency}" />
                                        <Span Text=" " />
                                        <Span Text="{Binding FrequencyType}" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Grid.Row="2" Text="{Binding DueOn, StringFormat='Due on: {0:dd-MM-yy}'}" />

                        <VerticalStackLayout>
                            <Button Text="Delete"
                                    BackgroundColor="IndianRed" />
                        </VerticalStackLayout>

                    </Grid>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
    </CollectionView>
    
</ContentPage>