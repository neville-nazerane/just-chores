<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:JustChores.MobileApp.ViewModels"
             xmlns:m="clr-namespace:JustChores.MobileApp.Models"
             xmlns:conv="clr-namespace:JustChores.MobileApp.ValueConverters"
             x:Class="JustChores.MobileApp.Pages.AddChorePage"
             x:DataType="vm:AddChoreViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="View All"
                     Command="{Binding ToListCommand}" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Resources>

        <Style TargetType="Label"
               Class="inputLbl">
            <Setter Property="FontAttributes"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="Large" />
        </Style>

        <conv:DictionaryToValuesConverter x:Key="dictonaryToValues" />
        <conv:OccuranceToBackgroundColorConverter x:Key="occToBackgroundColor" />
        <conv:OccuranceToBorderThicknessConverter x:Key="occToBorderThickness" />
        <conv:OccuranceToFontColorConverter x:Key="occToFontColor" />

        <x:Double x:Key="labelHeight">40</x:Double>
        
        <x:Double x:Key="inputHeight">50</x:Double>

    </ContentPage.Resources>


    <Grid Margin="20, 30, 20, 0"
          RowSpacing="20">
        <Grid.RowDefinitions>
            
            <!--Title label-->
            <RowDefinition Height="{StaticResource labelHeight}" />
            <!--Title input--> 
            <RowDefinition Height="{StaticResource inputHeight}" />

            <!--Occurrence label-->
            <RowDefinition Height="{StaticResource labelHeight}" />
            <!--Occurrence items--> 
            <RowDefinition Height="{StaticResource inputHeight}" />
            
            <!--Frequency label/input--> 
            <RowDefinition Height="{StaticResource inputHeight}" />
            
            <!--Starting date-->
            <RowDefinition Height="{StaticResource inputHeight}" />

            <!--Summary--> 
            <RowDefinition Height="100" />
            
            <!--Remaining space-->
            <RowDefinition Height="*" />
            
            <!--Save button-->
            <RowDefinition Height="50" />

        </Grid.RowDefinitions>


        <Label Text="Chore Title"
               class="inputLbl" />

        <Border Grid.Row="1"
                StrokeShape="RoundRectangle 8">
            <Border.Shadow>
                <Shadow Brush="Gray"
                        Offset="20,20"
                        Radius="40"
                        Opacity="0.8"/>
            </Border.Shadow>
            <Entry Placeholder="Title"
                   Text="{Binding Model.Title}"/>
        </Border>


        <Label Text="Chore Occurrence"
               Grid.Row="2"
               class="inputLbl" />

        <!--Occurrence Selection-->

        <Grid Grid.Row="3"
              ColumnDefinitions="*, *, *, *"
              ColumnSpacing="4">

            <Border StrokeShape="RoundRectangle 40"
                    StrokeThickness="{Binding FrequencyType, Converter={StaticResource occToBorderThickness}, ConverterParameter='Day'}"
                    BackgroundColor="{Binding FrequencyType, Converter={StaticResource occToBackgroundColor}, ConverterParameter='Day'}"
                    Stroke="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Day'}">
                <Label Text="Day"
                       TextColor="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Day'}"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center" />

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SetFrequencyTypeCommand}"
                                          CommandParameter="{x:Static m:FrequencyType.Day}" />
                </Border.GestureRecognizers>
            </Border>

            <Border StrokeShape="RoundRectangle 40"
                    Grid.Column="1"
                    StrokeThickness="{Binding FrequencyType, Converter={StaticResource occToBorderThickness}, ConverterParameter='Week'}"
                    BackgroundColor="{Binding FrequencyType, Converter={StaticResource occToBackgroundColor}, ConverterParameter='Week'}"
                    Stroke="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Week'}">
                <Label Text="Week"
                       TextColor="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Week'}"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center" />

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SetFrequencyTypeCommand}"
                                          CommandParameter="{x:Static m:FrequencyType.Week}" />
                </Border.GestureRecognizers>
            </Border>

            <Border StrokeShape="RoundRectangle 40"
                    Grid.Column="2"
                    StrokeThickness="{Binding FrequencyType, Converter={StaticResource occToBorderThickness}, ConverterParameter='Month'}"
                    BackgroundColor="{Binding FrequencyType, Converter={StaticResource occToBackgroundColor}, ConverterParameter='Month'}"
                    Stroke="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Month'}">
                <Label Text="Month"
                       TextColor="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Month'}"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center" />

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SetFrequencyTypeCommand}"
                                          CommandParameter="{x:Static m:FrequencyType.Month}" />
                </Border.GestureRecognizers>
            </Border>

            <Border StrokeShape="RoundRectangle 40"
                    Grid.Column="3"
                    StrokeThickness="{Binding FrequencyType, Converter={StaticResource occToBorderThickness}, ConverterParameter='Year'}"
                    BackgroundColor="{Binding FrequencyType, Converter={StaticResource occToBackgroundColor}, ConverterParameter='Year'}"
                    Stroke="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Year'}">
                <Label Text="Year"
                       TextColor="{Binding FrequencyType, Converter={StaticResource occToFontColor}, ConverterParameter='Year'}"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center" />

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SetFrequencyTypeCommand}"
                                          CommandParameter="{x:Static m:FrequencyType.Year}" />
                </Border.GestureRecognizers>
            </Border>


        </Grid>


        <!--Frequency--> 
        <Grid Grid.Row="4"
              ColumnDefinitions="*, *">
            <Label Text="Frequency"
                    class="inputLbl" />

            <Border Grid.Column="1"
                    StrokeShape="RoundRectangle 8">
                <Grid ColumnDefinitions="20, * , 20">
                    <Label Text="-" 
                           FontAttributes="Bold"
                           FontSize="Large"
                           class="centered" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding DecreaseFrequencyCommand}" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Entry Text="{Binding Frequency}" 
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           Grid.Column="1" />

                    <Label Text="+"
                           FontAttributes="Bold"
                           FontSize="Large"
                           class="centered" 
                           Grid.Column="2" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IncreaseFrequencyCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
            </Border>
        </Grid>
        
        
        <!--Date-->
        <Grid Grid.Row="5"
              ColumnDefinitions="*, *" >
            <Label Text="{Binding DateLabel}"
                   class="inputLbl" />

            <DatePicker Date="{Binding DueOn}"
                        Grid.Column="1" />

        </Grid>
        
        <!--Summary-->
        <Border Grid.Row="6"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 8"
                BackgroundColor="#E04B91F1" >
            <Label Text="{Binding Summary}"
                   class="centered"
                   FontAttributes="Bold" />
        </Border>


        <Button Grid.Row="8" 
                Text="{Binding SubmitText}"
                Command="{Binding SubmitCommand}" />

    </Grid>
    

