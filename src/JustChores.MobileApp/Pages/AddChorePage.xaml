<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:JustChores.MobileApp.ViewModels"
             xmlns:conv="clr-namespace:JustChores.MobileApp.ValueConverters"
             x:Class="JustChores.MobileApp.Pages.AddChorePage"
             x:DataType="vm:AddChoreViewModel"
             Title="Add Chore">

    <ContentPage.Resources>

        <conv:ChoreToSummaryConverter x:Key="choreToSummary" />
        <conv:ChoreToFrequencyTypeDisplayConverter x:Key="choreToFrequencyTypeDisplay" />

    </ContentPage.Resources>

    <Grid RowDefinitions="auto, *, 50"
        RowSpacing="20"
        Margin="20, 40, 20, 5">

        <VerticalStackLayout>
            <Entry Placeholder="Title"
                Text="{Binding Model.Title}" />

            <Entry Placeholder="Frequency"
                Keyboard="Numeric"
                Text="{Binding Model.Frequency}" />

            <Picker Title="{Binding Model, Converter={x:StaticResource choreToFrequencyTypeDisplay}}"
                    ItemsSource="{Binding ListedFrequencies}"
                    
                    />


        </VerticalStackLayout>

        <Button Text="Add Chore"
                Command="{Binding AddCommand}"
                Grid.Row="2" />
    </Grid>
</ContentPage>